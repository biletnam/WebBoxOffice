@model WebBoxOffice.Models.Movies

@{
    ViewData["Title"] = "Home Page";
    int i, j;
}
@{List<Movies> MoviesInfo = (List<Movies>)ViewData["Movies"];


<div width="1000px">
    
    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="1500" width="700px" align="left">
        
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
                @for (i = 0,j = MoviesInfo.Count-1; i < MoviesInfo.Count && j>0; i++,j--)
                {
                    var imagePath = "";

                    imagePath = "~/images/" + MoviesInfo[i].MovieName + ".jpg";
                <div class="item active">
                    <img src="@Url.Content(imagePath)" alt="Latest Movie" class="img-responsive" style="width:500px;height:250px;" />

                    <div class="carousel-caption" role="option" style="margin-left:300px; text-align:left; width:600px;">

                        <pre style="margin-left:0px; text-align:left;">
                            Name: @MoviesInfo[i].MovieName
                            Year: @MoviesInfo[i].Year_Of_Release
                            @MoviesInfo[i].Plot    
                            </pre>
                    </div>
                    <hr />
                </div>
                    
                <div class="item">
                    @{imagePath = "~/images/" + MoviesInfo[j].MovieName + ".jpg";
                    }
                    <img src="@Url.Content(imagePath)" alt="Latest Movie" class="img-responsive" style="width:500px;height:250px;" />

                    <div class="carousel-caption" role="option" style="margin-left:300px; text-align:left; width:600px;">

                        <pre style="margin-left:0px; text-align:left;">
                            Name: @MoviesInfo[j].MovieName
                            Year: @MoviesInfo[j].Year_Of_Release
                            @MoviesInfo[j].Plot 
                            
                            </pre>
                    </div>
                    <hr />
                </div>
                    
                }
            </div>
    </div>
</div>
}
<a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
</a>
<a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
</a>
<hr/>
<div class="row" width="300px" align="left">
    <div class="col-md-3">
        <h4>Latest Movies after 2010</h4>
        <ul>
            @{
                List<String> movienamelist = (List<String>)ViewData["Message"];
                foreach (string moviename in movienamelist)
                {
                    <li><a href="@Url.Action("About", "Home",new {mname=moviename })">@moviename</a></li>
                }
            }
        </ul>

    </div>
</div>